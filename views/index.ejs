      <section id="sectionDrink" class="sectionDrink">
        <div id="cardDrink">
          <h1>Cadastro de Drinks</h1>
          <form action="/create" method="post">
            <div class="drinkName">
              Nome do drink
              <input type="text" name="drink" id="drink">
            </div>
            <div class="formDrink">
                <div>
                  <h2>Bebidas</h2>
                  Nome da bebida
                  <input type="text" name="alcohol.name" id="alcohol.name">
                  Preço total da bebida
                  <input type="number" name="alcohol.priceTotal" id="alcohol.price">
                  <input type="number" name="alcohol.mlTotal" id="ml.price">
                  <input type="number" name="alcohol.mlDrink" id="ml.mlDrink">
                  <input type="number" name="alcohol.mlPrice" id="ml.mlPrice">
                </div>
                <div>
                  <h2>Frutas</h2>
                    Nome da fruta 1
                    <input type="text" name="fruits.one.name" id="fruits.one.name">
                    Preço do kg da fruta
                    <input type="number" name="fruits.one.priceTotal" id="fruits.one.price">
                    <input type="number" name="fruits.one.gramaTotal" id="fruits.one.gramaTotal">
                    <input type="number" name="fruits.one.gramaDrink" id="fruits.one.gramaDrink">
                    <input type="number" name="fruits.one.gramaPrice" id="fruits.one.gramaPrice">
                    Nome da fruta 2
                    <input type="text" name="fruits.two.name" id="fruits.two.name">
                    Preço do kg da fruta
                    <input type="number" name="fruits.two.priceTotal" id="fruits.two.price">
                    <input type="number" name="fruits.two.gramaTotal" id="fruits.two..gramaTotal">
                    <input type="number" name="fruits.two.gramaDrink" id="fruits.two..gramaDrink">
                    <input type="number" name="fruits.two.gramaPrice" id="fruits.two..gramaPrice">
                </div>
                <div>
                  <h2>Ingredientes</h2>
                    Nome do ingrediente 1
                    <input type="text" name="ingredient.one.name" id="ingredient.one.name">
                    Preço 
                    <input type="number" name="ingredient.one.priceTotal" id="ingredient.one.price">
                    <input type="number" name="ingredient.one.qtdTotal" id="ingredient.one.qtdTotal">
                    <input type="number" name="ingredient.one.qtdDrink" id="ingredient.one.qtdDrink">
                    <input type="number" name="ingredient.one.qtdPrice" id="ingredient.one.qtdPrice">
                    Nome do ingrediente 2
                    <input type="text" name="ingredient.two.name" id="ingredient.two.name">
                    Preço 
                    <input type="number" name="ingredient.two.priceTotal" id="ingredient.two.price">
                    <input type="number" name="ingredient.two.qtdTotal" id="ingredient.two.qtdTotal">
                    <input type="number" name="ingredient.two.qtdDrink" id="ingredient.two.qtdDrink">
                    <input type="number" name="ingredient.two.qtdPrice" id="ingredient.two.qtdPrice">
                </div>
                <div>
                  <h2>Decorações</h2>
                    Nome da Decoração
                    <input type="text" name="decorations.name" id="decorations.name">
                    Preço
                    <input type="number" name="decorations.price" id="decorations.price">
                    
                </div>
                <div>
