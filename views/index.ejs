    <ul id="ulDoida" class="ulDoida">
      <% drinkList.forEach((drink) => { %>
        <li><%= drink.drink %></li>    
        <li><%= drink.alcohol.name %></li>
        <li><%= drink.alcohol.priceTotal %></li>
        <li><%= drink.fruits.one.name %></li>
        <li><%= drink.fruits.one.priceTotal %></li>
        <li><%= drink.fruits.two.name %></li>
        <li><%= drink.fruits.two.priceTotal %></li>
        <li><%= drink.ingredient.one.name %></li>
        <li><%= drink.ingredient.one.priceTotal %></li>
        <li><%= drink.ingredient.two.name %></li>
        <li><%= drink.ingredient.two.priceTotal %></li>
        <li><%= drink.decorations.name %></li>
        <li><%= drink.decorations.priceTotal %></li>
        <li><%= drink.others.one.name %></li>
        <li><%= drink.others.one.priceTotal %></li>
        <li><%= drink.others.two.name %></li>
        <li><%= drink.others.two.priceTotal %></li>
        <li><%= drink.comments %></li>
        <br><br>
        <li>Valor total: <%= ((drink.alcohol.priceTotal / (drink.alcohol.mlTotal / drink.alcohol.mlDrink )) + 
          (drink.fruits.one.priceTotal/ (drink.fruits.one.gramaTotal / drink.fruits.one.gramaDrink)) + 
          (drink.ingredient.one.priceTotal/ (drink.ingredient.one.qtdTotal / drink.ingredient.one.qtdDrink)) + 
          (drink.ingredient.two.priceTotal/ (drink.ingredient.two.qtdTotal / drink.ingredient.two.qtdDrink)) +
          (drink.others.one.priceTotal/ (drink.others.one.qtdTotal / drink.others.one.qtdDrink)) + 
          (drink.others.two.priceTotal/ (drink.others.two.qtdTotal / drink.others.two.qtdDrink ))).toFixed(2)
           %> Reais</li>
      <% }) %> 
    </ul>

