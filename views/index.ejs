                  <input type="number" name="others.two.qtdTotal" id="others.two.qtdTotal">
                  <input type="number" name="others.two.qtdDrink" id="others.two.qtdDrink">
                  <input type="number" name="others.two.qtdPrice" id="others.two.qtdPrice">
                </div>
                <div id="txtArea">
